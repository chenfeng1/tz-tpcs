<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <definition name="baseLayout"
                template="/WEB-INF/jsp/demo/baseLayout.jsp">
        <put-attribute name="title" value="BaseHome" />
        <put-attribute name="header" value="/WEB-INF/jsp/demo/header.jsp" />
        <put-attribute name="menu" value="/WEB-INF/jsp/demo/menu.jsp" />
        <put-attribute name="body" value="/WEB-INF/jsp/demo/body.jsp" />
        <put-attribute name="footer" value="/WEB-INF/jsp/demo/footer.jsp" />
    </definition>

    <!--<definition name="login"
                template="/login.jsp">
    </definition>-->

    <definition name="*.*" extends="baseLayout">
        <!--国际化 title-->
        <put-attribute name="body"   value="/WEB-INF/jsp/{1}/{2}.jsp"/>
    </definition>

</tiles-definitions>